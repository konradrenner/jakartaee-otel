<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="buchhandlung" transaction-type="JTA">
            <jta-data-source>jdbc/buchhandlung</jta-data-source>
            <class>at.tigital.digbb.blueprint.buchhandlung.jpa.BuchEntity</class>
            <class>at.tigital.digbb.blueprint.buchhandlung.jpa.TransactionalOutboxEventEntity</class>
            <exclude-unlisted-classes>true</exclude-unlisted-classes>
            <shared-cache-mode>NONE</shared-cache-mode>
        </persistence-unit>
</persistence>
